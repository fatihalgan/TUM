<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>TUMGateway</display-name>
    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>TUMGateway</param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/gatewayContext.xml</param-value>
    </context-param>
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/classes/log4j.xml</param-value>
    </context-param>
    <listener><listener-class>org.springframework.web.util.Log4jConfigListener</listener-class></listener>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <!--
    <listener>
        <description>SMPPStarter</description>
        <listener-class>mcel.tump.smpp.util.SMPPStarter</listener-class>
    </listener>
    -->
    <servlet>
        <servlet-name>TUMGatewayServlet</servlet-name>
        <servlet-class>mcel.tump.gateway.service.TUMGatewayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TUMGatewayServlet</servlet-name>
        <url-pattern>/xmlrpc</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TUMMobileGatewayServlet</servlet-name>
        <servlet-class>mcel.tump.gateway.service.TUMMobileGatewayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TUMMobileGatewayServlet</servlet-name>
        <url-pattern>/xmlrpc/mobile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
